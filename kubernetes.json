{
	"apiVersion": "vlabs",
	"properties": {
		"orchestratorProfile": {
			"orchestratorType": "Kubernetes",
			"orchestratorVersion": "1.15.10",
			"kubernetesConfig": {
				"networkPolicy": "calico",
				"networkPlugin": "kubenet",
				"controllerManagerConfig": {
					"--horizontal-pod-autoscaler-sync-period": "30s",
					"--horizontal-pod-autoscaler-downscale-stabilization": "30m",
					"--horizontal-pod-autoscaler-use-rest-clients": "true"
				},
				"kubeletConfig": {
					"--max-pods": "110",
					"--authentication-token-webhook": "true",
					"--authorization-mode": "Webhook",
					"--kube-reserved-cgroup": "/kube-reserved",
					"--system-reserved-cgroup": "/system-reserved",
					"--eviction-hard": "memory.available<512Mi,nodefs.available<10%,nodefs.inodesFree<5%,imagefs.available<10%,imagefs.inodesFree<5%",
					"--system-reserved": "cpu=200m,memory=512Mi",
					"--kube-reserved": "cpu=200m,memory=512Mi"
				},
				"apiServerConfig": {
					"--runtime-config": "batch/v2alpha1=true,autoscaling/v2beta1=true",
					"--audit-log-maxage": "10",
					"--audit-log-maxbackup": "1",
					"--audit-log-maxsize": "100",
					"--admission-control":  "NamespaceLifecycle,LimitRanger,ServiceAccount,DefaultStorageClass,DefaultTolerationSeconds,MutatingAdmissionWebhook,ValidatingAdmissionWebhook,ResourceQuota,DenyEscalatingExec,AlwaysPullImages,ValidatingAdmissionWebhook,ResourceQuota"
				},
				"serviceCidr": "10.2.0.0/16",
				"dnsServiceIP": "10.2.0.10",
				"outboundRuleIdleTimeoutInMinutes": 10,
				"addons": [
					{
						"name": "cluster-autoscaler",
						"enabled": true,
						"mode": "EnsureExists",
						"pools": [
							{
								"name": "agentpool1",
								"config": {
									"min-nodes": "1",
									"max-nodes": "15"
								}
							}
						],
						"config": {
							"scan-interval": "1m",
							"scale-down-enabled": "true",
							"scale-down-unneeded-time": "5m0s",
							"scale-down-utilization-threshold": "0.95",
							"skip-nodes-with-local-storage": "false",
							"stderrthreshold": "info"
						}
					},
					{
						"name": "kube-dns",
						"enabled" : true
					},
					{
						"name": "coredns",
						"enabled" : false
					}
				]
			}
		},
		"masterProfile": {
			"count": 1,
			"vmSize": "Standard_D2_v2",
			"storageProfile": "ManagedDisks",
			"dnsPrefix": "jkc-k8scluster2",
			"vnetCidr": "10.238.0.0/16",
			"vnetSubnetId": "/subscriptions/acb3aaa4-a981-4fab-8476-e38eb0f7761a/resourceGroups/clarovideo/providers/Microsoft.Network/virtualNetworks/claro-vnet/subnets/workerSubnet",
			"firstConsecutiveStaticIP": "10.238.255.240",
			"OSDiskSizeGB": 60,
			"availabilityZones": [
				"1",
				"2",
				"3"
			]
		},
		"agentPoolProfiles": [
			{
				"name": "agentpool1",
				"count": 1,
				"vnetSubnetId": "/subscriptions/acb3aaa4-a981-4fab-8476-e38eb0f7761a/resourceGroups/clarovideo/providers/Microsoft.Network/virtualNetworks/claro-vnet/subnets/workerSubnet",
				"vmSize": "Standard_D2_v2",
				"storageProfile": "ManagedDisks",
				"availabilityProfile": "VirtualMachineScaleSets",
				"OSDiskSizeGB": 600,
				"availabilityZones": [
					"1",
					"2",
					"3"
				]
			}
		],
		"linuxProfile": {
			"adminUsername": "azureuser",
			"ssh": {
				"publicKeys": [
					{
						"keyData": "ssh-rsa "
					}
				]
			}
		},
		"servicePrincipalProfile": {
			"clientId": "d9f28f98-ffc5-4cdc-8eb8-90b5faf0cf77",
			"secret": "57f6aca6-1b09-457c-af9c-adc216b55286"
		}
	}
}
